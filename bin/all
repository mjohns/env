#!/bin/bash

regex=$@
first_regex=`echo $regex | cut -d. -f1`

regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
