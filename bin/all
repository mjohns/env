regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"

if [ "$regex" == "$first_regex" ]; then
  extra_grep=""
else
  extra_grep=" | grep -i $regex"
fi

for path in `cat ~/hg_dirs`; do
  cmd="ag -i --nogroup -p ~/.agignore $first_regex $path $extra_grep"
  cmd="rg -i -n $first_regex $path $extra_grep"
  eval $cmd | sort_ag.py
done
