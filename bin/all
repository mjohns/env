regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/.v/ | grep -v -i }"
regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"
regex="${regex/./ | grep -i }"
